{
  "model": {
    "type": "simple_seq2seq",
    "target_namespace": "abstract_tokens",
    "source_embedder": {
      "type": "basic",
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 100
        }
      }
    },
    "encoder": {
      "type": "lstm",
      "num_layers": 2,
      "input_size": 100,
      "hidden_size": 100,
      "bidirectional": true
    },
    "attention": {
      "type": "bilinear",
      "vector_dim": 200,
      "matrix_dim": 200,
      "activation": "tanh"
    },
    "max_decoding_steps": 100,
    "beam_size": 5
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["source_tokens", "num_tokens"]],
    "batch_size": 20,
    "cache_instances": true
  },
  "trainer": {
    "num_epochs": 50,
    "grad_norm": 5.0,
    "cuda_device": 0,
    "summary_interval": 1,
    "patience": 2,
    "shuffle": false,
    "should_log_parameter_statistics": false,
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    }
  }
}